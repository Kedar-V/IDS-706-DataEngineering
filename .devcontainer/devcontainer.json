{
    "name": "Bitcoin Data Engineering Dev Container",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "python", // Main service name from docker-compose.yml
    "workspaceFolder": "/app", // Matches the volume mount in compose
    "postCreateCommand": "pip install --upgrade pip && pip install -r Week3/requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black"
            }
        }
    }
}
