{
    "name": "Python 3.12 Data Analysis",  // Name of the Dev Container
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",  // Base image

    // Workspace folder inside the container
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

    // Commands to run after container creation
    "postCreateCommand": "pip install --upgrade pip && pip install -r Week3/requirements.txt",

    // VS Code customizations (extensions and settings)
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",         // Python language support
                "ms-python.vscode-pylance", // Fast static type checking
                "ms-python.black-formatter" // Code formatter
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python", // Container Python path
                "python.linting.enabled": true,              // Enable linting
                "python.linting.pylintEnabled": true,        // Use pylint
                "python.formatting.provider": "black"        // Use Black
            }
        }
    }
}
